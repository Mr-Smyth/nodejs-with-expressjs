<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    
    <main>
        <h1><%= pageTitle %></h1>
        <% if (errorMsg) { %>
            <div class="user-message user-message--error">
                <p><%= errorMsg %></p>
            </div>        
        <% } %>
        <form class="login-form" action="/new-password" method="POST">
            <div class="form-control">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" required>
            </div>
            <!-- we need to include the users id that we are updating - we include this in the get controller -->
            <input type="hidden" name="userId" value="<%= userId %>">
            <!-- also want to return the token - so we can invalidate it once used - we include this in the get controller-->
            <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Update Password</button>
        </form>
    </main>
    
<%- include('../includes/end.ejs') %>