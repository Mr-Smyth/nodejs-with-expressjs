<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <h1><%= pageTitle %></h1>

        <% if (errorMsg) { %>
            <div class="user-message user-message--error">
                <p><%= errorMsg %></p>
            </div>        
        <% } %>
        <form class="signup-form" action="/signup" method="POST">
            <div class="form-control">
                <label for="email">Username</label>
                <input 
                type="username" 
                name="username" 
                id="username" 
                value="<%= oldInput.username %>" 
                class="<%= errorsArray.find(error => error.param === 'username') ? 'invalid': '' %>"
                required>
            </div>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                type="email" 
                name="email" 
                id="email" 
                value="<%= oldInput.email %>" 
                class="<%= errorsArray.find(error => error.param === 'email') ? 'invalid': '' %>"
                required>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input
                type="password"
                name="password" 
                id="password" 
                value="<%= oldInput.password %>" 
                class="<%= errorsArray.find(error => error.param === 'password') ? 'invalid': '' %>"
                required>
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                type="password" 
                name="confirmPassword" 
                id="confirmPassword" 
                value="<%= oldInput.confirmPassword %>"
                class="<%= errorsArray.find(error => error.param === 'confirmPassword') ? 'invalid': '' %>"
                required>
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>