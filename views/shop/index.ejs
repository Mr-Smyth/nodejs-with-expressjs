<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    

    <main>
        <h1><%= pageTitle %></h1>
        <!-- Add the if check for products with ejs -->
        <% if (products.length > 0) { %>
        <div class="grid">
            <% for (product of products) { %>
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title"><%= product.title %></h1>
                    </header>
                    <div class="card__image">
                        <img src="<%= product.imageUrl %>" alt="A Book">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">$ <%= product.price %></h2>
                        <p class="product__description"><%= product.description %></p>
                    </div>
                    <div class="card__actions">
                        <a href="/product-details/<%= product._id %>" class="btn">Details</a>
                        
                        <!-- use an include, but the code within the include may need the product passed to it
                        we add it as a 2nd arg 
                        example: <%- include('../includes/add-to-cart.ejs', {product: product}) %>-->
                        <%- include('../includes/add-to-cart.ejs', {product: product}) %>
                    </div>
                </article>
            <% } %>
        </div>
        <% } else { %>
            <h1>No Products Yet!!</h1>
        <% } %>
    </main>
    
<%- include('../includes/end.ejs') %>